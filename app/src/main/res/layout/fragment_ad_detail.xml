<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <LinearLayout
            android:id="@+id/mainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/adimageid"
                android:layout_width="@dimen/ad_size"
                android:layout_height="@dimen/ad_size"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ad_banner" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/activity_half_margin"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/buttonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_half_margin"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:weightSum="1">

                <Button
                    android:id="@+id/btncallid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="@string/call_btn_caption"
                    android:theme="@style/MyButton" />

                <View
                    android:layout_width="@dimen/fab_margin"
                    android:layout_height="fill_parent" />

                <Button
                    android:id="@+id/btnmsgid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="@string/msg_btn_caption"
                    android:theme="@style/MyButton" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/activity_half_margin"
                android:background="@android:color/darker_gray" />


            <TextView
                android:id="@+id/adtitleid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_half_margin"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/header_text_size" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_half_margin"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15"
                        android:text="@string/ad_price_caption"
                        android:textSize="@dimen/form_field_text_size" />

                    <TextView
                        android:id="@+id/adpriceid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85"
                        android:textSize="@dimen/form_field_text_size" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_half_margin"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15"
                        android:text="@string/ad_date_caption"
                        android:textSize="@dimen/form_field_text_size" />

                    <TextView
                        android:id="@+id/addateid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85"
                        android:textSize="@dimen/form_field_text_size" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_half_margin"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.23"
                        android:text="@string/ad_location_caption"
                        android:textSize="@dimen/form_field_text_size" />

                    <TextView
                        android:id="@+id/adlocationid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.77"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:textSize="@dimen/form_field_text_size" />
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/activity_half_margin"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/addescid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_half_margin"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="@dimen/form_field_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/activity_half_margin"
                android:background="@android:color/darker_gray" />

            <!--<LinearLayout
                android:id="@+id/bottomcontainerid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/adhitid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_half_margin"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/form_field_text_size" />

                <TextView
                    android:id="@+id/adidid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_half_margin"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/form_field_text_size" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/activity_half_margin"
                android:background="@android:color/darker_gray" />-->

        </LinearLayout>

    </ScrollView>

</RelativeLayout>